{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true, //안쓰는 지역변수 있으면 에러
    "noUnusedParameters": true, //안쓰는 파라미터 있으면 에러
    "noFallthroughCasesInSwitch": true, //switch문 제대로 안쓰면 에러
    "baseUrl": "./src",
    "paths": {
      "@/": ["src/"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["vite.config.ts"]
}
